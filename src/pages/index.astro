---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Santiago's Portfolio">
	<main>
		<section class="flex flex-col w-full h-screen justify-center items-center gap-4">
			<a href="#" class="flex text-[#a4a4a4] py-2 px-4 border-[1px] border-[#a4a4a4] rounded-lg mb-8">
				<img src="/public/file-download.svg"
					alt="CV buttom"
					class="fill-white">Download CV

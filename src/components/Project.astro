---
interface Props {
    name: string;
    description: string;
    desktopImage: string;
    mobileImage: string;
    technologies: string;
    link: string;
}
const { name, description, desktopImage, mobileImage, technologies, link } = Astro.props;
---
<div class="w-full flex flex-col md:flex-row md:justify-between px-12 items-center md:h-72 mb-8 md:mb-0">
    <div class="w-full mb-6 md:w-3/5 xl:w-3/6">
        <div class="flex flex-col">
            <div class="w-auto flex items-center mb-4">
                <span class="text-white text-2xl mr-4 xl:text-xl">{name}</span>
                {
                    link ?
                        <a href={link} target="_blank" class="hover:scale-110 transition">
                            <img src="/website.svg" alt="website logo" class="h-6">
                        </a>
                    : null
                }
            </div>
            <p class="text-white mb-2 xl:text-sm">{description}</p>
            <span class="text-white text-lg">Technologies</span>
            <div class="flex flex-row gap-4">
                <span class="text-[#a4a4a4] xl:text-sm">{technologies}</span>
            </div>
        </div>
    </div>
    <div class="md:h-3/5 rounded-lg p-2 mb-8 md:mb-0 bg-[#282828] hover:bg-[#3a3a3a] hover:scale-105 transition">
        <img src={desktopImage} alt="Project image" class="max-h-96 md:h-full rounded">
    </div>
    {
        mobileImage ?
            <div class="w-full md:w-auto md:h-3/5 rounded-lg p-2 bg-[#282828] hover:bg-[#3a3a3a] hover:scale-105 transition">
                <img src={mobileImage} alt="" class="w-full md:h-full rounded">
            </div> : null
    }
</div>